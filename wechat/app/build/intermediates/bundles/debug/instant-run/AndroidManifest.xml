<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaojianli.wechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.xiaojianli.wechat.login.LoginActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaojianli.wechat.register.RegisterActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaojianli.wechat.chat.ChatActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppChatTheme" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaojianli.wechat.addfriend.AddFriendActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityInOut"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaojianli.wechat.chat.chatWindowActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppChatWindowTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaojianli.wechat.chat.friendWindowActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppChatWindowTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>