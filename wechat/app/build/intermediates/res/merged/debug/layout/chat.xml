<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_list"
    >
    
    <ImageView 
        android:id="@+id/mTouxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:contentDescription="this a touxiang"
        android:background="@drawable/icon"/>
    
	<LinearLayout
	    android:id="@+id/nameAndcontent"
	    android:layout_toRightOf="@id/mTouxiang" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:orientation="vertical"
	    android:gravity="center_vertical"
	    android:background="@null"
	    >
	    <TextView
	        android:id="@+id/name" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="15dp"
	        android:textSize="20sp"
	        android:textColor="@android:color/background_dark"
	        android:text="SB"
	        android:background="@null"/>
	    <TextView 
	        android:id="@+id/content"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="5dp"
	        android:textColor="@android:color/darker_gray"
	        android:background="@null"
	        android:textSize="15sp"
	        android:text=""
	        />	 
	          
	</LinearLayout>
	
	<TextView
	    android:id="@+id/newMessageTextView"
	    android:layout_marginRight="20dp" 
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="新消息"
	    android:textSize="15sp"
	    android:textColor="@color/newmessage"
	    android:layout_centerVertical="true"
	    android:background="@null"
	    android:visibility="gone"
	    />
