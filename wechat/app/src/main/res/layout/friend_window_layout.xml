<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/chatWindowTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/chatwindowtitleColor"
        android:gravity="center_vertical">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@null"
            android:text="个人信息"/> 
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            />       
        <TextView 
            android:id="@+id/friendwindowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:text="返回"
            android:clickable="true"
            android:textColor="@drawable/back"
            android:background="@null"
            android:textSize="18sp"/>

    </LinearLayout>    
    
    <TextView
        android:id="@+id/friendInfoTextView"
        android:layout_width="match_parent"
        android:background="@color/listbackColor"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:lineSpacingExtra="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/black">
        
    </TextView>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listbackColor">
        
    <Button 
        android:id="@+id/sendMessageButton"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send"
        android:text="发送消息"
        android:textSize="20sp"/>
           
    </LinearLayout>
</LinearLayout>