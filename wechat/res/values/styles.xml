<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>
    
    <style name="AppChatTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/backgroundColor</item>
    </style>
    
    <style name="AppChatWindowTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:background">@android:color/white</item>
    </style>
<!-- 	<style name="AppAddFriendTheme" parent="@android:style/Theme.Black.NoTitleBar">
        All customizations that are NOT specific to a particular API-level can go here.
        <item name="android:background">@android:color/holo_green_light</item>
    </style> -->
    
    <style name="ActivityInOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
       	<item name="android:activityCloseEnterAnimation">@anim/zoom_in</item> 
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item> 
    </style>
    
	
</resources>
